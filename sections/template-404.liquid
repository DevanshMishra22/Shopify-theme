<div class="bg-gray-800 w-[100%]">

  <div class="flex items-center justify-center h-screen relative">
    <svg
      width="380px"
      height="500px"
      viewBox="0 0 837 1045"
      xmlns="http://www.w3.org/2000/svg">
      <g
        stroke="none"
        stroke-width="1"
        fill="none"
        fill-rule="evenodd">
        <path d="M353,9 L626.664028,170 L626.664028,487 L353,642 L79.3359724,487 L79.3359724,170 L353,9 Z" class="stroke-[#007FB2] stroke-6 transition-all duration-300 ease-in-out hover:stroke-8"></path>
        <path d="M78.5,529 L147,569.186414 L147,648.311216 L78.5,687 L10,648.311216 L10,569.186414 L78.5,529 Z" class="stroke-[#EF4A5B] stroke-6 transition-all duration-300 ease-in-out hover:stroke-8"></path>
        <path d="M773,186 L827,217.538705 L827,279.636651 L773,310 L719,279.636651 L719,217.538705 L773,186 Z" class="stroke-[#795D9C] stroke-6 transition-all duration-300 ease-in-out hover:stroke-8"></path>
        <path d="M639,529 L773,607.846761 L773,763.091627 L639,839 L505,763.091627 L505,607.846761 L639,529 Z" class="stroke-[#F2773F] stroke-6 transition-all duration-300 ease-in-out hover:stroke-8"></path>
        <path d="M281,801 L383,861.025276 L383,979.21169 L281,1037 L179,979.21169 L179,861.025276 L281,801 Z" class="stroke-[#36B455] stroke-6 transition-all duration-300 ease-in-out hover:stroke-8"></path>
      </g>
    </svg>

    <div class="absolute text-white font-light text-center">
      <h1 class="text-6xl mb-10">{{ section.settings.title
}}</h1>
      <p class="mb-10">
        {{ section.settings.subtext_title }}
      </p>
      <div class="buttons-con">
        <div class="action-link-wrap flex justify-center space-x-4">
          {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
          {% else %}

            {% assign shop_url = section.settings.button_url %}

          {% endif %}

          <a href=" {{ shop_url }}" class="link-button py-2 px-4 bg-transparent border-2 border-white rounded-md text-white hover:bg-white hover:text-black transition">
            {{ section.settings.button_label }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "404",
    "tag": "section",
    "class": "flex justify-center items-center text-centre py-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Heading title"
      }, {
        "type": "text",
        "id": "subtext_title",
        "default": "The Page that you are lokking for is not availble",
        "label": "404 Subtext title"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Back to homepage",
        "label": "Button label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}