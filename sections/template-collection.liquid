<div class="px-4 py-8">
  <a href="{{ routes.collections_url }}" class="text-base text-gray-500 hover:underline text-center block my-4">

    Go Back To collections</a>
  {% paginate collection.products by section.settings.product_per_page %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for product in collection.products %}
          {% render 'product-card'
            , product: product %}

        {% else %}
          <P>There are no products inside of this collection
          </P>
        {% endfor %}
      </div>
    </div>


    {% render 'pagination'
      , pagination: paginate %}
  {% endpaginate %}
</div>


{% schema %}
  {
    "name": "Template Collection",
    "settings": [
      {
        "type": "number",
        "id": "product_per_page",
        "default": 6,
        "label": "Number of products per page"
      }
    ]
  }
{% endschema %}