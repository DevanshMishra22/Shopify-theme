{% if pagination.pages > 0 %}
  <nav role="navigation" class="flex justify-center my-8">
    {% if pagination.previous %}
      <a href="{{pagination.previous.url}}" class="border border-gray-600 hover:bg-gray-600 hover:text-white px-3 py-3 mx-1 rounded">{{ pagination.previous.title }}</a>
    {% endif %}

    {% if pagination.next %}
      <a href="{{pagination.next.url}}" class="border border-gray-600 hover:bg-gray-600 hover:text-white px-3 py-3 mx-1 rounded">
        {{ pagination.next.title }}</a>
    {% endif %}

  </nav>
{% endif %}